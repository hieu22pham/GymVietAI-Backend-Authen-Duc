<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="/css/forgotPassword.css" rel="stylesheet" type="text/css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <title>Document</title>
</head>

<script>
  $(document).ready(function () {
    $(document).on("click", "#sendBtn", async function (event) {
      const username = $("#username").val();
      $.ajax({
        url: window.location.origin + "/resendCode",
        type: "POST",
        contentType: "application/json",
        data: JSON.stringify({ email: username }),
        success: function (user) {
          console.log(">> res", user);
        },
        error: function (err) {
          console.log(err.responseJSON);
        },
      });
    });
  });
</script>

<body>
  <div class="forgotpassword">
    <form>
      <h1>Forget Password</h1>

      <div class="des">
        <span>Enter your email and we'll send you new password</span>
      </div>

      <div class="input">
        <input type="email" placeholder="Enter Email" />
      </div>

      <div class="input">
        <input type="text" placeholder="Enter OTP" />
      </div>

      <div class="input">
        <input type="text" placeholder="Enter New Password" />
      </div>

      <div class="input">
        <input type="text" placeholder="Enter Confirm New Password" />
      </div>

      <button class="commit">SEND EMAIL</button>

      <div class="goback">
        <Link to="/">Back to Sign in</Link>
      </div>

    </form>
  </div>
</body>

</html>